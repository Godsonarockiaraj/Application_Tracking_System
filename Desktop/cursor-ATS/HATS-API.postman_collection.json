{
  "info": {
    "name": "HATS API Collection",
    "description": "Complete API collection for Hybrid Application Tracking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"applicant\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"applicant@demo.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/login",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/me",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "Create Job (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Developer\",\n  \"description\": \"Looking for an experienced developer\",\n  \"department\": \"Engineering\",\n  \"isTechnical\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Get Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications",
              "host": ["{{base_url}}"],
              "path": ["api", "applications"]
            }
          }
        },
        {
          "name": "Submit Application",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "jobId",
                  "value": "{{job_id}}",
                  "type": "text"
                },
                {
                  "key": "personalInfo",
                  "value": "{\"fullName\":\"John Doe\",\"email\":\"john@example.com\",\"phone\":\"1234567890\"}",
                  "type": "text"
                },
                {
                  "key": "resume",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/applications",
              "host": ["{{base_url}}"],
              "path": ["api", "applications"]
            }
          }
        },
        {
          "name": "Update Application Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"shortlisted\",\n  \"comment\": \"Great candidate!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Bot Mimic",
      "item": [
        {
          "name": "Process Technical Applications",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bot_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bot-mimic/process",
              "host": ["{{base_url}}"],
              "path": ["api", "bot-mimic", "process"]
            }
          }
        }
      ]
    },
    {
      "name": "Keywords",
      "item": [
        {
          "name": "Get Keywords for Job",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/keywords/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "keywords", "{{job_id}}"]
            }
          }
        },
        {
          "name": "Set Keywords for Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobId\": \"{{job_id}}\",\n  \"keywords\": [\n    {\"keyword\": \"React\", \"weight\": 3, \"category\": \"technical\"},\n    {\"keyword\": \"Node.js\", \"weight\": 3, \"category\": \"technical\"},\n    {\"keyword\": \"MongoDB\", \"weight\": 2, \"category\": \"technical\"}\n  ],\n  \"minimumScore\": 5,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/keywords",
              "host": ["{{base_url}}"],
              "path": ["api", "keywords"]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Dashboard Data",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/dashboard",
              "host": ["{{base_url}}"],
              "path": ["api", "dashboard"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "admin_token",
      "value": ""
    },
    {
      "key": "bot_token",
      "value": ""
    },
    {
      "key": "job_id",
      "value": ""
    },
    {
      "key": "application_id",
      "value": ""
    }
  ]
}

